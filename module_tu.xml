      <bootclasspath refid="tu.module.bootclasspath"/>
      <classpath refid="tu.module.production.classpath"/>
      <src refid="tu.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.tu"/>
    </javac2>
    
